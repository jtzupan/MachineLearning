import numpy as np

def linearRegressionGradientDescent(x, theta, y, alpha):
    '''
    
    '''
    
    m = np.shape(x)[0]
    n = np.shape(x)[1]
    
    predictedOutput = np.dot(np.transpose(theta), x)
    squaredDiff = (predictedOutput - y) ** 2
    sumSquaredDiff = sum(sum(squaredDiff))
    cost = (1 / m) * sumSquaredDiff
    
    theta -= alpha * ((predictedOutput - y) * predictedOutput)
